<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/student_profile_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.codeweb.codeweb.User_Activity.ProfileEdit">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appbar">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:id="@+id/toolbar"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollview"
        android:paddingTop="3dp"
        android:paddingRight="7dp"
        android:paddingLeft="7dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/appbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/textColor"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/user_icon"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/user_img"
                android:layout_gravity="center"/>
            <TextView
                android:text="Students ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="14dp"
                android:id="@+id/id" />
            <TextView
                android:text="BSIT-4C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="14dp"
                android:id="@+id/section" />

            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_width ="match_parent">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="@color/hintcolor"
                    android:drawableLeft="@drawable/ic_fullname"
                    android:drawablePadding="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="5dp"
                    android:ems="10"
                    android:hint="Fullname"
                    android:textColorHint="@color/colorPrimary"
                    android:id="@+id/et_fullname" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width ="match_parent">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="@color/hintcolor"
                    android:drawableLeft="@drawable/ic_action_name"
                    android:drawablePadding="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="5dp"
                    android:ems="10"
                    android:hint="Username"
                    android:textColorHint="@color/colorPrimary"
                    android:id="@+id/et_username" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width ="match_parent">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="@color/hintcolor"
                    android:drawableLeft="@drawable/ic_password"
                    android:drawablePadding="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="5dp"
                    android:ems="10"
                    android:hint="Password"
                    android:textColorHint="@color/colorPrimary"
                    android:id="@+id/et_password" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width ="match_parent">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="@color/hintcolor"
                    android:drawableLeft="@drawable/ic_contacts"
                    android:drawablePadding="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="5dp"
                    android:ems="10"
                    android:hint="Phone Number"
                    android:textColorHint="@color/colorPrimary"
                    android:id="@+id/et_number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width ="match_parent">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="@color/hintcolor"
                    android:drawableLeft="@drawable/ic_message"
                    android:drawablePadding="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="5dp"
                    android:ems="10"
                    android:hint="Email"
                    android:textColorHint="@color/colorPrimary"
                    android:id="@+id/et_email" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:text="Save Changes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/save"
                android:textColor="@color/textColor"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_rect" />
            </LinearLayout>
        </ScrollView>

</RelativeLayout>
