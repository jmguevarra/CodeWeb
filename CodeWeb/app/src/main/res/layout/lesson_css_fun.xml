<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_css_fun"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.codeweb.codeweb.LessonActivity.CssLesson.CssFunActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appbar">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:id="@+id/toolbar"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/css_basic"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/basic_btn"
                android:onClick="gotoCssBasic"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/css_text"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/text"
                android:onClick="gotoCssText"
                android:scaleType="fitCenter"
                android:layout_below="@+id/css_basic"
                android:layout_toStartOf="@+id/css_basic"
                android:layout_marginEnd="20dp" />

            <ImageButton
                android:id="@+id/css_properties"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:scaleType="fitCenter"
                android:background="@drawable/properties"
                android:onClick="gotoCssProperties"
                android:layout_marginStart="20dp"
                android:layout_alignTop="@+id/css_text"
                android:layout_toEndOf="@+id/css_basic" />

            <ImageButton
                android:id="@+id/css_layout"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:scaleType="fitCenter"
                android:background="@drawable/layouts"
                android:onClick="gotoCssLayouts"
                android:layout_below="@+id/css_properties"
                android:layout_toStartOf="@+id/css_properties"
                android:layout_marginTop="50dp" />

            <ImageButton
                android:id="@+id/css3"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="50dp"
                android:background="@drawable/css3"
                android:onClick="gotoCss3"
                android:layout_below="@+id/css_layout"
                android:layout_toStartOf="@+id/css_layout"
                android:layout_marginEnd="20dp" />

            <ImageButton
                android:id="@+id/css_image"
                android:layout_width="77dp"
                android:scaleType="fitCenter"
                android:layout_height="77dp"
                android:background="@drawable/image_background"
                android:onClick="gotoCssImage"
                android:layout_marginStart="20dp"
                android:layout_alignTop="@+id/css3"
                android:layout_toEndOf="@+id/css_layout" />

            <ImageButton
                android:id="@+id/css_transition"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:scaleType="fitCenter"
                android:background="@drawable/transition"
                android:onClick="gotoCssTransition"
                android:layout_below="@+id/css_image"
                android:layout_toStartOf="@+id/css_image"
                android:layout_marginTop="50dp"
                />
            <TextView
                android:text=" The Basic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textSize="18sp"
                android:layout_below="@+id/css_basic"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:text="Text Editing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_below="@+id/css_text"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                />

            <TextView
                android:text="Properties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/css_text"
                android:layout_alignStart="@+id/css_properties"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:text="Layouts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textSize="18sp"
                android:layout_below="@+id/css_layout"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="Css3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_below="@+id/css3"
                android:layout_marginStart="42dp"
                android:layout_marginTop="3dp"
                />

            <TextView
                android:text="Backgrounds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/css_image"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:text="Transitions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/css_transition"
                android:layout_marginBottom="20dp" />


        </RelativeLayout>

    </ScrollView>
   <!-- <ImageButton
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/home"
        android:id="@+id/backbtn"
        android:onClick="BackBtn"
        android:theme="@style/AppTheme.AppBarOverlay" />

    <TextView
        android:text="Css Fun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titlename"
        android:textSize="20dp"
        android:textColor="@color/textColor"
        android:layout_marginBottom="13dp"
        android:layout_alignBottom="@+id/backbtn"
        android:layout_toEndOf="@+id/backbtn"
        android:layout_marginStart="16dp" />
-->
</RelativeLayout>
