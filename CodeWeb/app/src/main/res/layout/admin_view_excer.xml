<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/admin_view_excer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.codeweb.codeweb.Admin_Activity.AdminActions.ActionsCom.ViewExcerDetailed">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appbar">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:id="@+id/toolbar"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <ImageButton
                android:id="@+id/edit"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_gravity="end|center"
                android:background="@drawable/ic_edit"
                android:onClick="Edit"
                android:layout_marginEnd="8dp" />
            </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/textColor">

            <ImageView
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:id="@+id/quiz_icon"
                android:layout_gravity="center"
                android:layout_marginTop="20dp" />

            <TextView
                android:text="Title of Question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:minLines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp"
                android:id="@+id/quiz_title"
                android:textStyle="bold"/>

            <TextView
                android:text="quiz_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="14sp"
                android:id="@+id/quiz_course" />

            <TextView
                android:text="Type of Quiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="50dp"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_quiztype"
                android:drawablePadding="25dp"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="8dp"
                android:id="@+id/quiz_type" />

            <TextView
                android:text="Author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_action_name"
                android:drawablePadding="25dp"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="8dp"
                android:id="@+id/quiz_author" />

            <TextView
                android:text="Date Published"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_date"
                android:minLines="1"
                android:maxLines="2"
                android:ellipsize="end"
                android:drawablePadding="25dp"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="8dp"
                android:id="@+id/quiz_published" />

            <TextView
                android:text="Question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/colorPrimary"
                android:padding="10dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textSize="20sp" />

            <TextView
                android:text="Question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_question"
                android:drawablePadding="25dp"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="8dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/quiz_question" />

            <TextView
                android:text="Options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/colorPrimary"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="20sp" />
            <TextView
                android:text="Option A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_opt1"
                android:drawablePadding="25dp"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="8dp"
                android:id="@+id/quiz_opta" />

            <TextView
                android:text="Option B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_opt2"
                android:drawablePadding="25dp"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="8dp"
                android:id="@+id/quiz_optb" />

            <TextView
                android:text="Option C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_opt3"
                android:minLines="1"
                android:maxLines="2"
                android:ellipsize="end"
                android:drawablePadding="25dp"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="8dp"
                android:id="@+id/quiz_optc" />

            <TextView
                android:text="Option D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_opt4"
                android:drawablePadding="25dp"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="8dp"
                android:id="@+id/quiz_optd" />

            <TextView
                android:text="Correct Answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/colorPrimary"
                android:padding="10dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textSize="20sp" />

            <TextView
                android:text="Answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_check"
                android:drawablePadding="25dp"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="8dp"
                android:layout_marginBottom="30dp"
                android:id="@+id/quiz_ans" />


        </LinearLayout>
    </ScrollView>


</RelativeLayout>
