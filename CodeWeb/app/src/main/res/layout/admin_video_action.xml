<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/admin_video_action"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColor"
    tools:context="com.app.codeweb.codeweb.Admin_Activity.AdminActions.ActionsCom.AddVideo"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollview"
        android:paddingTop="3dp"
        android:paddingRight="7dp"
        android:paddingLeft="7dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/appbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_course"
                android:layout_marginTop="16dp"
                style="@style/Base.Animation.AppCompat.DropDownUp"
                android:layout_marginBottom="12dp"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/sp_category"
                android:layout_marginBottom="12dp"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/sp_lesson"
                android:layout_marginBottom="12dp"/>

            <VideoView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center"
                android:id="@+id/displayRecordedVideo" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:id="@+id/Files"
                    android:text="Choose File"
                    android:textColor="@color/textColor"
                    android:background="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small" />

            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:id="@+id/upload"
                android:text="Upload"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="6dp"
                android:textColor="@color/textColor"
                android:background="@color/colorPrimary"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
